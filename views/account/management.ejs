<section class="account-management">
  <h1><%= title %></h1>
  
  <%- messages() %>
  
  <% if (locals.errors) { %>
    <ul class="errors">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <h2>Welcome <%= locals.accountData.account_firstname %></h2>

  <p> You are logged in.</p>

  <p>
    <a href="/account/update/<%= locals.accountData.account_id %>" title="Click to edit account information">
      Edit Account Information
    </a>
  </p>

  <% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
    <div class="inventory-mgmt-section">
      <h3>Inventory Management</h3>
      <p>
        <a href="/inv/" title="Access the inventory management view">Manage Inventory</a>
      </p>
    </div>
  <% } %>

</section>